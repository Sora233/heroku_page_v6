<%= render 'shared/page_title', page_title: "Post List" %>
<% if @posts.empty? %>
  <p class="h5">No Posts Yet</p>
  <%= link_to "See Your Draft", profile_posts_path, class: "btn btn-primary" %>
<% else %>
  <ul id="posts" data-channel="posts">
    <%= render @posts %>
  </ul>
  <%= paginate @posts %>
<% end %>
<br/>
<div class="d-flex justify-content-end">
  <% if can? :new, Post %>
    <div class="p-2">
      <%= link_to 'New Post', new_post_path, class: "btn btn-success" %><br/>
    </div>
  <% end %>
  <div class="p-2">
    <%= link_to 'Back To Home', root_path, class: "btn btn-secondary" %>
  </div>
</div>